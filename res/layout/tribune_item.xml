<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="10" >

            <!-- 楼主 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView 
                    android:id="@+id/tribune_item_title"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textSize="22sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/tribune_item_use_head"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="start"
                        android:layout_weight="1"
                        android:src="@drawable/ic_launcher" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tribune_item_use_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="楼主0001"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tribune_item_use_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2017-10-22"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tribune_item_use_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:text="1楼"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tribune_item_use_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="显示内容"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/tribune_item_use_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_launcher" />
            </LinearLayout>
            <!-- 评论区 -->

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eaeaea" />

            <ListView
                android:id="@+id/tribune_item_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#ababab"
                android:dividerHeight="1dp" >
            </ListView>
            <!-- 评论输入区 -->

        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eaeaea" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/tribune_item_use_head_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher" />

        <EditText
            android:id="@+id/tribune_item_pinglun_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="8" />

        <Button
            android:id="@+id/tribune_item_pinglun_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="发送"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>