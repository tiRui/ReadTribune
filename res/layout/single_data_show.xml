<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaeaea" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="148dp"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/single_show_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:src="@drawable/ic_launcher" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4" >

                <TextView
                    android:id="@+id/single_show_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="标题"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/single_show_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/single_show_title"
                    android:layout_marginTop="52dp"
                    android:maxLines="2"
                    android:text="作者"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/single_show_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="简介:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/single_show_descr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="16sp" />

        <Button
            android:id="@+id/single_descr_show_hide"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:background="#ffffff"
            android:text="展开"
            android:textSize="16sp" />
        <!-- 第一行评论 -->

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eaeaea" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/single_show_discuss_img_1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/single_show_discuss_id_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="用户001"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/single_show_discuss_word_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="这个书很好看！这个书很好看！这个书很好看！这个书很好看！"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/single_show_discuss_date_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="2017.10.10"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
        <!-- 第二行评论 -->

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eaeaea" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/single_show_discuss_img_2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/single_show_discuss_id_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="用户002"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/single_show_discuss_word_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="这个书很好看！这个书很好看！这个书很好看！这个书很好看！"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/single_show_discuss_date_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="2017.10.10"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
        <!-- 第三行评论 -->

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eaeaea" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/single_show_discuss_img_3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/single_show_discuss_id_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="用户003"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/single_show_discuss_word_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="这个书很好看！这个书很好看！这个书很好看！这个书很好看！"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/single_show_discuss_date_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="2017.10.10"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eaeaea" />
        <TextView 
            android:id="@+id/single_show_more_discuss"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginBottom="6dp"
            android:gravity="center"
            android:background="#ffffff"
            android:textSize="18sp"
            android:text="更多评论>>"/>
    </LinearLayout>

</ScrollView>