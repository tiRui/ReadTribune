<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaeaea"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:layout_weight="6" >
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/center_img_btn1"
            android:layout_width="64dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:src="@drawable/wenzi" />

        <ImageView
            android:id="@+id/center_img_btn2"
            android:layout_width="64dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:src="@drawable/tupian" />

        <ImageView
            android:id="@+id/center_img_btn3"
            android:layout_width="64dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:src="@drawable/xianzhi" />

        <ImageView
            android:id="@+id/center_img_btn4"
            android:layout_width="64dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:src="@drawable/qita" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cdc1c5" />

    <ImageButton
        android:id="@+id/center_off_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:src="@drawable/off" />

</LinearLayout>