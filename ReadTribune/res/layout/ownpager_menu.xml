<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/news_title_img_left"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignBottom="@id/news_title_txt"
        android:layout_alignParentStart="true"
        android:src="@drawable/own" />

    <TextView
        android:id="@+id/news_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="个人"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/news_title_txt_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/news_title_txt"
        android:layout_alignParentEnd="true"
        android:gravity="center_horizontal"
        android:text="设置"
        android:textSize="22sp" />

</RelativeLayout>